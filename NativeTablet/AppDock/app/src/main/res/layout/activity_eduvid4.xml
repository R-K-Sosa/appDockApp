<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actBg"
    android:orientation="horizontal"
    android:padding="15dp">

    <Button
        android:id="@+id/videoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/title"
            android:layout_width="667dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/video4Title"
            android:textAlignment="viewStart"
            android:textColor="@color/titles"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="395dp"
            android:orientation="vertical"
            android:weightSum="1">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="fill_parent"
                android:layout_height="393dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <Button
            android:id="@+id/backbtn"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:background="@color/highlighted"
            android:text="@string/back"
            android:textColor="@color/btnHighlightTxt"
            android:theme="@style/Base.Widget.AppCompat.ActionButton" />
    </LinearLayout>

</RelativeLayout>
