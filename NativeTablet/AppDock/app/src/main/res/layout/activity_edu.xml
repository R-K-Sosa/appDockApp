<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    tools:context="com.appdockproject.appdock.eduActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_dark"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/logo"
            android:layout_width="152dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@color/highlighted"

            android:src="@drawable/logo"
            android:theme="@style/Base.Widget.AppCompat.ActionButton" />

        <Button
            android:id="@+id/appBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:clickable="true"
            android:text="@string/appTitleBtn"
            android:textColor="@color/abc_primary_text_material_dark"
            android:theme="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog" />

        <Button
            android:id="@+id/devBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@string/devTitleBtn"
            android:textColor="@color/abc_primary_text_material_dark"
            android:theme="@style/Base.Widget.AppCompat.ActionButton" />

        <Button
            android:id="@+id/eduBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@color/highlighted"
            android:text="@string/eduTitleBtn"
            android:textColor="@color/abc_primary_text_material_dark"
            android:theme="@style/Base.Widget.AppCompat.ActionButton" />

        <Button
            android:id="@+id/comBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@string/surveyTitleBtn"
            android:textColor="@color/abc_primary_text_material_dark"
            android:theme="@style/Base.Widget.AppCompat.ActionButton" />

        <Button
            android:id="@+id/fbBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@string/facebookTitleBtn"
            android:textColor="@color/abc_primary_text_material_dark"
            android:theme="@style/Base.Widget.AppCompat.ActionButton" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"

            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="0dp"
                    android:paddingTop="5dp"
                    android:text="@string/eduTitle"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/wolofBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="5dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="0dp"
                    android:background="@color/colorLightColor"
                    android:src="@drawable/wolof" />

            </RelativeLayout>


        </LinearLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnCount="2"
            android:orientation="horizontal"
            android:paddingTop="75dp"
            android:rowCount="4">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="100dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/gmail"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@color/colorLightColor"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gmail" />

                <TextView
                    android:id="@+id/aText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@color/colorLightColor"
                    android:gravity="center_horizontal"
                    android:text="@string/video1Title"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/mobileapp"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@color/colorLightColor"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mobileapp" />

                <TextView
                    android:id="@+id/bText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:gravity="center_horizontal"
                    android:text="@string/video2Title"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="100dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/play"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:background="@color/colorLightColor"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play" />

                <TextView
                    android:id="@+id/dText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:gravity="center_horizontal"
                    android:text="@string/video3Title"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/download"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:background="@color/colorLightColor"
                    android:scaleType="fitCenter"
                    android:src="@drawable/download" />

                <TextView
                    android:id="@+id/downloadText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:gravity="center_horizontal"
                    android:text="@string/video4Title"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>


</LinearLayout>
