<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appdockproject.appdock.facebookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/facebookTitle"
                    android:textColor="@color/titles"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorLightColor"
                    android:src="@drawable/wolof" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50dp">

            <ImageView
                android:id="@+id/imFacebookphoto"
                android:layout_width="580dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/placehorlder_appdock_round" />

            <Button
                android:id="@+id/bTakePhoto"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="20dp"
                android:background="@color/buttonHighlighted"
                android:text="@string/facebook_take_a_photo"
                android:textColor="@color/btnHighlightTxt"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_below="@id/imFacebookphoto"
                android:layout_toStartOf="@+id/bShareToFacebook" />

            <Button
                android:id="@+id/bShareToFacebook"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:background="@color/buttonHighlighted"
                android:text="@string/facebook_upload_to_facebook"
                android:textColor="@color/btnHighlightTxt"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_below="@+id/imFacebookphoto"
                android:layout_alignEnd="@+id/imFacebookphoto" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
