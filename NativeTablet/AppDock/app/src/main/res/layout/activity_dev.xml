<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.appdockproject.appdock.navbar"
        android:translationZ="@dimen/abc_action_bar_content_inset_material"
        android:background="@color/actBg"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="7"
            android:background="@color/navBarBg"
            android:transitionGroup="true">


            <ImageButton
                android:id="@+id/logo"
                android:layout_width="152dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@color/navBarBg"

                android:src="@drawable/logo"
                android:theme="@style/Base.Widget.AppCompat.ActionButton" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eduTitleBtn"
                android:id="@+id/eduBtn"
                android:layout_weight="1"
                android:background="@color/buttonNormal"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/appTitleBtn"
                android:id="@+id/appBtn"
                android:layout_weight="1"
                android:background="@color/buttonNormal"
                android:theme="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark"
                android:clickable="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/devTitleBtn"
                android:id="@+id/devBtn"
                android:layout_weight="1"
                android:background="@color/highlighted"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="15dp"
                android:textColor="@color/btnHighlightTxt" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/surveyTitleBtn"
                android:id="@+id/comBtn"
                android:layout_weight="1"
                android:background="@color/buttonNormal"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facebookTitleBtn"
                android:id="@+id/fbBtn"
                android:layout_weight="1"
                android:background="@color/buttonNormal"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|top">

            <LinearLayout
                android:layout_width="784dp"
                android:layout_height="fill_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"

                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="520dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="@string/devTitle"
                                android:textColor="@color/titles"
                                android:textSize="25sp"
                                android:textStyle="bold" />


                            <ImageButton
                                android:id="@+id/imageButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@color/colorLightColor"
                                android:src="@drawable/wolof" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:columnCount="2"
                            android:orientation="horizontal"
                            android:rowCount="4"
                            android:padding="10dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginLeft="70dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingEnd="100dp">

                                <ImageButton
                                    android:id="@+id/dev1"
                                    android:layout_width="250dp"
                                    android:layout_height="150dp"
                                    android:layout_column="0"
                                    android:layout_row="0"
                                    android:background="@color/actBg"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/devs1"
                                    />

                                <TextView
                                    android:id="@+id/dev1txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_row="1"
                                    android:background="@color/actBg"
                                    android:gravity="center_horizontal"
                                    android:text="@string/dev1"
                                    android:textColor="@color/titles"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textAlignment="viewStart"
                                    android:padding="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/dev2"
                                    android:layout_width="250dp"
                                    android:layout_height="150dp"
                                    android:layout_column="1"
                                    android:layout_row="0"
                                    android:background="@color/actBg"
                                    android:textColor="@color/titles"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/devs2"
                                    />

                                <TextView
                                    android:id="@+id/dev2txt"
                                    android:layout_width="213dp"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_row="1"
                                    android:gravity="center_horizontal"
                                    android:text="@string/dev2"
                                    android:textColor="@color/titles"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textAlignment="viewStart"
                                    android:padding="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingEnd="100dp">

                                <ImageButton
                                    android:id="@+id/dev3"
                                    android:layout_width="250dp"
                                    android:layout_height="150dp"
                                    android:layout_column="0"
                                    android:layout_row="2"
                                    android:background="@color/actBg"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/devs3" />

                                <TextView
                                    android:id="@+id/dev3txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_row="3"
                                    android:gravity="center_horizontal"
                                    android:text="@string/dev3"
                                    android:textColor="@color/titles"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textAlignment="viewStart"
                                    android:padding="10dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/dev4"
                                    android:layout_width="250dp"
                                    android:layout_height="150dp"
                                    android:layout_column="1"
                                    android:layout_row="2"
                                    android:background="@color/actBg"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/devs4" />

                                <TextView
                                    android:id="@+id/dev4txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="41dp"
                                    android:layout_column="1"
                                    android:layout_row="3"
                                    android:gravity="center_horizontal"
                                    android:text="@string/dev4"
                                    android:textColor="@color/titles"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:padding="10dp" />

                            </LinearLayout>
                        </GridLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>




