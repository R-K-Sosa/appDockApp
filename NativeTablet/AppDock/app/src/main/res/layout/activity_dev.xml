<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.appdockproject.appdock.navbar"
        android:translationZ="@dimen/abc_action_bar_content_inset_material"
        android:background="@color/colorAccent"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="7"
            android:background="@android:color/holo_green_dark"
            android:transitionGroup="true">


            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/logo"
                android:src="@drawable/logo"
                android:layout_weight="2"
                android:background="@color/highlighted"

                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Applications"
                android:id="@+id/appBtn"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark"
                android:clickable="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Développeurs"
                android:id="@+id/devBtn"
                android:layout_weight="1"
                android:background="@color/highlighted"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"
                android:id="@+id/eduBtn"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Commentaires"
                android:id="@+id/comBtn"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:id="@+id/fbBtn"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_margin="15dp"
                android:textColor="@color/abc_primary_text_material_dark" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="787dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|top">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/dev1"
                    android:src="@drawable/dev1"
                    android:scaleType="fitCenter"
                    android:layout_width="143dp"
                    android:layout_height="143dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:background="@color/colorLightColor"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="68dp"
                    android:layout_alignTop="@+id/dev2"
                    android:layout_alignStart="@+id/title" />

                <ImageButton
                    android:id="@+id/dev2"
                    android:src="@drawable/dev1"
                    android:scaleType="fitCenter"
                    android:layout_width="143dp"
                    android:layout_height="143dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:background="@color/colorLightColor"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="146dp"
                    android:layout_marginTop="84dp"
                    android:layout_below="@+id/title"
                    android:layout_alignEnd="@+id/title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:paddingTop="5dp"
                    android:text="Découvrez des développeuses et développeurs sénégalais"
                    android:id="@+id/title"
                    android:textStyle="bold"
                    android:layout_marginRight="0dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textAlignment="center"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dev1"
                    android:id="@+id/dev1Text"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorLightColor"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="13dp"
                    android:layout_below="@+id/dev2"
                    android:layout_alignStart="@+id/dev2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dev2"
                    android:id="@+id/dev2Text"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorLightColor"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="13dp"
                    android:layout_below="@+id/dev1"
                    android:layout_alignStart="@+id/dev1" />

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>


    <!--Content -->




</LinearLayout>